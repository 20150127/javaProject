<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="tc" extends="exception" namespace="/tc">
	    <action name="list" class="tcAction" method="list">
	    	<result name="success">/admin/tc/tc_index.jsp</result>
	    </action>

	    <action name="toUpdate" class="tcAction" method="toUpdate">
	    	<result name="success">/admin/tc/tc_update.jsp</result>
	    </action>
	    
	    <action name="update" class="tcAction" method="update">
	    	<result name="success">/pub/add_success.jsp</result>
	    </action>
	    <action name="toExport" class="tcAction" method="toExport">
			<result name="success">/admin/tc/toExportExcel.jsp</result>
		</action>
	    <action name="export" class="tcAction" method="export">
			<result name="success" type="stream">
				<param name="contentType">application/vnd.ms-excel;charset=UTF-8</param>
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">attachment;filename=${fileName}</param>
				<param name="bufferSize">2048</param>
			</result>
		</action>
    </package>
</struts>
